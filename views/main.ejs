            color: white;
            text-decoration: none;
            cursor: pointer;
            transition: background-color ease-in-out .14s;
            user-select: none;
        }

        .link:hover {
            background-color: var(--dark-cyan);
        }

        .phone-link {
            width: 40px;
            height: 28px;
            overflow: hidden;
            white-space: nowrap;
            transition: width ease-in-out .3s;
            position: relative;
        }

        .phone-link:hover {
            width:  var(--fit-size) !important;
            justify-content: flex-start;
        }

        .phone-link:hover::after {
            content: attr(text-in);
            position: absolute;
            right: 0;
            background-color: var(--darker-cyan);
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0 10px;
        }

        .gmail-link:hover {
            width: 215px !important;
        }

        @media (max-width: 830px) {
            .floating-text {
                opacity: 0;
            }
        }

        .amount-display {
