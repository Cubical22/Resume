        :root {
            --bright-cyan: rgb(54, 118, 238);
            --dark-cyan: rgb(46, 99, 197);
            --darker-cyan: rgb(34, 75, 151);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, Helvetica, sans-serif;
            user-select: none;
        }

        body {
            background-color: black;
        }

        .background-image {
            position: fixed;
            object-fit: cover;
            filter: blur(30px) brightness(70%);
            left: -10vw;
            top: -10vh;
            width: 120vw;
            height: 120vh;
            z-index: -10;
        }

        .left-side {
            background-color: rgba(0, 0, 0, 0.438);
            width: 100vw;
            max-width: 40vw;
	        min-width: 350px;
	        min-height: 100vh;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.521);
            display: flex;
            flex-direction: column;
            z-index: -2;
            position: absolute;
            border: 1px solid var(--bright-cyan);
            border-width: 0 1px 0 0;
        }

        .floating-text {
            position: fixed;
            right: 1em;
            top: 1em;
            color: white;
            transition: opacity cubic-bezier(0.12, 0.87, 1, 1) 0.14s;
            text-align: end;
            user-select: none;
        }

        .job-span {
            font-size: 0.7em;
            text-decoration: underline;
            text-decoration-color: var(--bright-cyan);
        }

        .upper-left-side {
            height: 8em;
            background-color: rgba(0, 0, 0, 0.493);
            display: flex;
            flex-direction: row;
            position: relative;
            border: 1px solid var(--bright-cyan);
            border-width: 0 0 1px 0;
            padding: 10px 0;
        }

        .upper-left-side::after {
            content: '';
            position: absolute;
            --width: 30px;
            background: linear-gradient(180deg, var(--bright-cyan), transparent);
            width: var(--width);
            top: -10px;
            height: 100vh;
            right: calc(var(--width) * (-1));
        }

        .upper-left-side::before {
            content: '';
            position: absolute;
            --width: 30px;
            width: var(--width);
            height: 30vh;
            background: linear-gradient(180deg, var(--darker-cyan), transparent);
            right: calc(var(--width) * (-1));
            top: -10px;
            z-index: 1;
        }

        @media (max-width: 420px) {
            .upper-left-side::after {
                display: none;
            }

            .upper-left-side::before {
                display: none;
            }
        }

        .profile-image-holder {
            height: 100%;
            aspect-ratio: 1/1;
            padding: 20px;
        }

        .profile-image-holder img {
            height: 100%;
            aspect-ratio: 1/1;
            object-fit: cover;
            border-radius: 50%;
            border: 1px solid var(--bright-cyan);
            transform: scale(120%);
        }

        .upper-info-holder {
            display: flex;
            flex-direction: column;
            flex: 1;
            color: white;
            justify-content: space-evenly;
            align-items: flex-start;
        }

        .upper-info-holder p {
            width: 100%;
            direction: rtl;
        }

        .ability-level-area {
            height: 19rem;
            background-color: rgba(0, 0, 0, 0.493);
            display: flex;
            flex-direction: row;
            padding-bottom: 3px;
            padding-right: 10px;
            
        }

        .abilities-name-list {
            height: 100%;
            width: fit-content;
            padding: 10px;
            align-items: flex-start !important;
            margin-top: -2px;
            row-gap: 5px;
        }

        .abilities-name-list a {
            color: white;
            text-decoration: none;
            font-style: italic;
            transition: color ease-in-out .14s;
            white-space: nowrap;
            direction: rtl;
        }

