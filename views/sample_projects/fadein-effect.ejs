<script>
    const fadein_intersect = new IntersectionObserver((entries)=>{
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('show');
            } else if (![...entry.target.classList].includes('once-fader')){
                entry.target.classList.remove('show');
            }
        });
    });

    const faders = document.querySelectorAll('.fader');
    faders.forEach(fader => {
        fadein_intersect.observe(fader);
    });
</script>

<script defer>
    const color_changing_texts = document.querySelectorAll('.color-changer');
    window.addEventListener("scroll", ()=> {
        color_changing_texts.forEach(element => {
            console.log(window.scrollY)
            element.style.color = `hsl(${window.scrollY*0.2}, 50%, 50%)`;
        });
    });
</script>
