    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Welcoming page</title>
    <style>
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
            user-select: none;
            font-family: "Trebuchet MS", serif;
        }

        body {
            width: 100vw;
            min-height: 100vh;
            background-color: #262626;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-evenly;
            overflow-x: hidden;
            color: white;
        }

        .bottom-svg {
            margin-top: 50px;
            transform: scaleY(-100%);
            color: #479a47;
        }

        .welcome {
            width: fit-content;
        }

        h1 {
            font-size: 2rem;
            text-align: center;
            padding: 0 10px;
        }

        .welcome-section p, .listing-section p {
            font-size: 1.4rem;
            text-align: center;
        }

        .fader {
            opacity: 0;
            transform: translateX(-10%);
            filter: blur(5px);
            transition: filter 1s ease-out, transform 1s ease-out, opacity 1s ease-out;
        }

        .fader.show {
            opacity: 1;
            filter: blur(0);
            transform: translateX(0%);
        }

        body .welcome-section:first-child p {
            color: #479a47;
        }

        .welcome-section {
            min-height: 80vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            row-gap: 10px;
        }

        .welcome-section .description {
            color: #479a47;
        }

        .listing-section {
            border: solid #479a47;
            border-width: 3px 0 3px 0;
            width: 100%;
        }

        .list-item {
            min-height: 100px;
            position: relative;
            width: 100vw;
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .list-item p {
            padding: 0 10px;
        }

        .list-item .vertical-line {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 3rem;
            width: 3px;
            background-color: #479a47;
        }

        .list-item .vertical-line::after {
            content: '';
            position: absolute;
            height: 3px;
            width: 10rem;
            top: 50%;
            background: linear-gradient(90deg, #479a47, transparent);
        }

        .delayed-fader {
            transition-delay: var(--delay-time);
        }

        .last-section {
            background: linear-gradient(180deg, transparent, #479a47);
            width: 100%;
            margin-bottom: -1px;
        }

        .last-section p {
            color: white;
        }

        footer {
            min-height: 200px !important;
            margin-top: 100px;
            margin-bottom: 100px;
        }

        a {
            color: #8ecb8e;
            cursor: pointer !important;
        }

        @media (prefers-reduced-motion) {
            .fader {
                transition: none;
            }
        }

        @media (max-width: 880px) {
            .list-item .vertical-line {
                display: none;
            }
        }
    </style>
</head>
<body>
